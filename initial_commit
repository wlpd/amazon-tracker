      "%85M%C3%85%C5%BD%C3%95%C3%91&crid=7DMEJPBZPQ1W&dchild=1&keywords=amd+ryzen+5+3600x&qid=1599318836&sprefix=amd" \
      "+ryzen+%2Caps%2C510&sr=8-15" \
      "+ryzen+%2Caps%2C510&sr=8-15 "
Headers = {
    'User-Agent': "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/85.0.4183.83 Safari/537.36"}


def start():
    reponse = requests.get(url, headers=Headers)
    soup = BeautifulSoup(reponse.content, "lxml")
    yolo = float(
        soup.find(id="priceblock_ourprice").get_text().replace('.', '').replace('â‚¬', '').replace(',', '.').strip())
    if yolo < 479.90:
        print("no change")
    else:
        print("price change")


for do in range(10):
    sleep(60)
    start()
